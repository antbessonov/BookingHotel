<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="-1dp"
        android:left="-1dp"
        android:right="-1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke
                android:width="1dp"
                android:color="#E8E9EC" />
            <padding
                android:bottom="12dp"
                android:left="16dp"
                android:right="16dp"
                android:top="12dp" />
        </shape>
    </item>

</layer-list>