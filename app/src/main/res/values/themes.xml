<resources>

    <style name="Theme.BookingHotel" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:fontFamily">@font/sf_pro_display</item>

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:colorBackground">@color/md_theme_light_background</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>

    </style>

    <style name="Theme.BookingHotel.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.BookingHotel.MaterialToolbar" parent="Widget.Material3.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="titleTextAppearance">
            @style/Theme.BookingHotel.MaterialToolbar.TitleText
        </item>
        <item name="titleCentered">true</item>
    </style>

    <style name="Theme.BookingHotel.MaterialToolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
    </style>

    <style name="Theme.BookingHotel.MaterialToolbar.LinearProgressIndicator" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/md_theme_light_blue</item>
    </style>

    <style name="Theme.BookingHotel.MainActionButton">
        <item name="android:backgroundTint">@color/md_theme_light_blue</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">15dp</item>
    </style>


    <style name="Theme.BookingHotel.RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="Theme.BookingHotel.CardView" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Theme.BookingHotel.TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxBackgroundColor">#F6F6F9</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@color/textfield_label_color</item>
        <item name="android:textColorHint">@color/textfield_label_color</item>
    </style>

    <style name="Theme.BookingHotel.TextInputEditText" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:textColor">#14142B</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>